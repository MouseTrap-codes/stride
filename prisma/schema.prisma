generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id String @id @default(cuid())
  name String
  description String?
  userId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks Task[]

  @@index([userId])
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

model Task {
  id String @id @default(cuid())
  title String
  description String?
  status TaskStatus @default(TODO)
  projectId String
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
}
